<h1> <%= @bus.name %> </h1>


<table border="1">
  <tr>
    <th>Bus Name</th>
    <td> <%= @bus.name %> </td>
  </tr>
  <tr>
    <th>Bus Type</th>
    <td> <%= @bus.typed %> </td>
  </tr>
  <tr>
    <th>Bus Brand</th>
    <td> <%= @bus.brand %> </td>
  </tr>
  <tr>
    <th>Bus Capacity</th>
    <td> <%= @bus.capacity %> </td>
  </tr>
</table>

<ul>
  <li>
     <%= link_to "Edit", edit_bus_path(@bus) %> 
  </>
  <li>
    <%= link_to "Destroy", bus_path(@bus), data:{
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </li>
  <li>
    <%= link_to "See Buses", buses_path %>
  </li>
</ul>